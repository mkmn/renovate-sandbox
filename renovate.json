{
  "dependencyDashboard": true,
  "enabledManagers": [
    "custom.regex",
    "circleci",
    "nodenv",
    "ruby-version"
  ],
  "extends": [
    "customManagers:dockerfileVersions"
  ],
  "packageRules": [
    {
      "groupName": "Node.js",
      "extends": ["workarounds:nodeDockerVersioning"],
      "matchDatasources": [
        "docker",
        "node-version"
      ]
    },
    {
      "groupName": "Ruby",
      "matchDatasources": [
        "docker",
        "ruby-version"
      ],
      "matchPackageNames": [
        "/(?:^|/)ruby$/"
      ],
      "versioning": "ruby"
    }
  ]
}
