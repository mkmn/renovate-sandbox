{
  "dependencyDashboard": true,
  "enabledManagers": [
    "dockerfile",
    "nodenv",
    "custom.regex",
    "circleci"
  ],
  "extends": [
    "customManagers:dockerfileVersions"
  ],
  "packageRules": [
    {
      "commitMessageTopic": "Node.js",
      "matchDatasources": [
        "docker",
        "node-version"
      ],
      "matchPackageNames": [
        "/(?:|^/)node$/"
      ],
      "matchDepNames": [
        "cimg/node"
      ],
      "labels": ["docker", "nodejs"],
      "versionCompatibility": "^(?<version>[^-]+)(?<compatibility>-.*)?$",
      "versioning": "node"
    }
  ]
}
